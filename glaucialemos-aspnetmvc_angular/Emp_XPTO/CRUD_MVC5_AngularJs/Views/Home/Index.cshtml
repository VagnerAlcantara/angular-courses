<div class="container" ng-controller="funcionarioCtrl">
    <div class="panel panel-info">
        <div class="panel panel-heading">Listagem de funcionários</div>
        <div class="panel-body">
            <button type="button" class="btn btn-info" data-target="#AdicionarFuncionario" data-toggle="modal">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
        <table class="table table-bordered">
            <thead style="background-color:burlywood">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Departamento</th>
                    <th>Cargo</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="func in Funcionarios">
                    <td>{{func.FuncionarioId}}</td>
                    <td>{{func.Nome}}</td>
                    <td>{{func.Email}}</td>
                    <td>{{func.Departamento}}</td>
                    <td>{{func.Cargo}}</td>
                    <td style="width:200px">
                        <a href="#" data-target="#AtualizarFuncionario" data-toggle="modal" class="btn btn-success" ng-click="atualizarFuncionarioPorId(func)"><span class="glyphicon glyphicon-pencil"></span> </a>
                        <a href="#" data-target="#ExcluirFuncionario" data-toggle="modal" class="btn btn-danger" ng-click="excluirFuncionarioPorId(func)"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            </tbody>

        </table>
        <!--Início modal adicionar funcionario -->
        <div class="modal" id="AdicionarFuncionario" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="text-info">Adicionar funcionário</h3>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" name="AdicionarNovoFuncionarioForm">
                            <div class="form-group"><input class="form-control" readonly="readonly" name="funcionarioId" type="hidden" placeholder="Id do funcionário" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="nome" placeholder="Nome do funcionário" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="email" placeholder="E-mail" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="departamento" placeholder="Departamento" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="cargo" placeholder="Cargo" /></div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnSalvar" data-dismiss="modal" ng-click="adicionarFuncionario()">Salvar</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="limparDados()">Fechar</button>

                    </div>
                </div>
            </div>
        </div>
        <!--Fim -->
        <!--Início modal atualizar funcionario -->
        <div class="modal" id="AtualizarFuncionario" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="text-info">Atualizar funcionário</h3>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" name="AtualizarForm">
                            <div class="form-group"><input class="form-control" readonly="readonly" ng-model="atualizadoFuncionarioId" name="funcionarioId" type="hidden" placeholder="Id do funcionário" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="atualizadoNome" placeholder="Nome do funcionário" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="atualizadoEmail" placeholder="E-mail" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="atualizadoDepartamento" placeholder="Departamento" /></div>
                            <div class="form-group"><input class="form-control" name="nome" type="text" ng-model="atualizadoCargo" placeholder="Cargo" /></div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnSalvar" data-dismiss="modal" ng-click="atualizarFuncionario()">Salvar</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="limparDadosAtualizados()">Fechar</button>

                    </div>
                </div>
            </div>
        </div>
        <!--Fim -->
        <!--Início modal excluir funcionario -->
        <div class="modal" id="ExcluirFuncionario" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="text-info">Você tem certeza que deseja excluir o funcionário(a)?</h3>
                    </div>
                    <div class="modal-body">
                        <p>Id do funcionário: {{atualizadoFuncionarioId}}</p>
                        <p>Nome do funcionário: {{atualizadoNome}}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="btnSalvar" data-dismiss="modal" ng-click="excluirFuncionario(atualizadoFuncionarioId)">Excluir</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="limparDadosAtualizados()">Fechar</button>

                    </div>
                </div>
            </div>
        </div>
        <!--Fim -->

    </div>

</div>
@section scripts{
    <script src="~/AngularJsApp/Funcionario/Module.js"></script>
    <script src="~/AngularJsApp/Funcionario/Service.js"></script>
    <script src="~/AngularJsApp/Funcionario/Controller.js"></script>
}